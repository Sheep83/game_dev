<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.61">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_name"
                android:textAlignment="center"
                android:textSize="45dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/rarity"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_gravity="left|bottom" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/damage"
            android:textAlignment="center"
            android:textSize="35dp"
            android:layout_gravity="right|bottom" />

        <TextView
            android:layout_width="100dp"
            android:text="@string/damage"
            android:layout_height="wrap_content"
            android:id="@+id/damage_header"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_gravity="right|center_vertical" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp">

        <TextView
            android:text="@string/intellect"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/int_header"
            android:layout_below="@+id/level_header"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_gravity="top|left"
            android:gravity="center" />

        <TextView
            android:text="@string/vitality"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/vit_header"
            android:layout_below="@+id/int_header"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal|top"
            android:gravity="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_vitality"
            android:layout_below="@+id/vit_header"
            android:textAlignment="center"
            android:textSize="24dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_intellect"
            android:layout_below="@+id/int_header"
            android:textAlignment="center"
            android:textSize="24dp"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:text="@string/level"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/level_header"
            android:layout_below="@+id/item_name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_gravity="top|right"
            android:gravity="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_level"
            android:textAlignment="center"
            android:textSize="24dp"
            android:layout_gravity="right|center_vertical" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:id="@+id/inventory_button"
        android:layout_below="@+id/equip_item"
        android:layout_alignLeft="@+id/delete_button"
        android:layout_alignStart="@+id/delete_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete_button"
        android:layout_alignTop="@+id/equip_item"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equip"
        android:id="@+id/equip_item"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Character"
        android:id="@+id/character_button"
        android:layout_below="@+id/equip_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    </RelativeLayout>


</LinearLayout>